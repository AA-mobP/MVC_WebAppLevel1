@{
}
<div class="row">
    <label><h3>Students</h3></label>
    <hr />
    <div class="col-3">
        <table class="table table-borderless table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Address</th>
                    <th>Image</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Student item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td><img style="height:50px;" src="/Images/@item.Image" /></td>
                        <td>@item.Name</td>
                        <td><a class="btn btn-info" href="/Student/Details/@item.Id">Show</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>